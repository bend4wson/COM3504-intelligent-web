<%- include('header'); -%>
<link rel="stylesheet" href="/leaflet/leaflet.css" />
<script src="/leaflet/leaflet.js"></script>


<div class="card col-11 col-md-6" style="margin: 100px auto;">
    <div class="card-body">
        <h1>Add your sighting below:</h1>

        <form id="sightingForm">
            <div class="mb-3">
                <label class="form-label" for="type">Type:</label>
                <select class="form-control" name="type" id="type" required></select>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description:</label>
                <input class="form-control" type="text" name="description" id="description" required />
            </div>
            <div class="mb-3">
                <label class="form-label" for="lat">Latitude:</label>
                <input class="form-control" type="number" step="any" name="lat" id="lat" required readonly />
            </div>
            <div class="mb-3">
                <label class="form-label" for="lng">Longitude:</label>
                <input class="form-control" type="number" step="any" name="lng" id="lng" required readonly />
            </div>

            <div id="map" style="height: 400px; width: 100%;">
                <div id="loadingWidget">
                    <p>Loading map...</p>
                    <!-- *** Replace the paragraph above with a spinner when there is chance, can use Font Awesome or Bootstrap -->
                </div>
            </div>
<!--                <label class="form-label" for="map">Choose Sighting Location:</label>-->
<!--            </div>-->
            <input class="form-control" type="hidden" name="userLat" id="userLat" required />
            <input class="form-control" type="hidden" name="userLng" id="userLng" required />
            <input class="form-control" type="hidden" name="username" id="username" required />
            <div class="mb-3">
                <label class="form-label" for="picture">Picture:</label>
                <input class="form-control" type="file" name="picture" id="picture" accept="image/*" />
            </div>
            <button type="submit">Add Sighting</button>
        </form>
    </div>
</div>
<script>
    function addSighting() {
        const form = document.getElementById('sightingForm');
        form.submit();
    }

    function getLocation() {
        console.log('Getting location...');
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(
                (position) => {
                    console.log('Position received:', position);
                    document.getElementById('userLat').value = position.coords.latitude;
                    document.getElementById('userLng').value = position.coords.longitude;
                    document.getElementById('lat').value = position.coords.latitude;
                    document.getElementById('lng').value = position.coords.longitude;
                    initMapWithDraggableMarker(position.coords.latitude, position.coords.longitude);  // Initialize the map
                },
                (error) => {
                    console.warn(`ERROR(${error.code}): ${error.message}`);
                    console.log('Error details:', error);
                },
                {
                    enableHighAccuracy: true,
                    timeout: 20000,
                    maximumAge: 0,
                }
            );
        } else {
            console.log('Geolocation is not supported by this browser.');
        }
    }

    async function fetchBirdTypes() {
        const sparqlQuery = `
    PREFIX dbo: <http://dbpedia.org/ontology/>
    PREFIX dbr: <http://dbpedia.org/resource/>
    SELECT DISTINCT ?bird ?birdLabel
    WHERE {
        dbr:Bird dbo:wikiPageWikiLink ?bird .
        ?bird rdfs:label ?birdLabel .
        FILTER(lang(?birdLabel) = "en") .
    }
    LIMIT 1000
    `;
        const url = "https://dbpedia.org/sparql?query=" + encodeURIComponent(sparqlQuery) + "&format=json";

        try {
            const response = await fetch(url);
            const data = await response.json();
            return data.results.bindings;
        } catch (error) {
            console.error("Error fetching bird names:", error);
            return [];
        }
    }

    function populateBirdTypesDropdown(birdTypes) {
        // Sort the birdTypes array alphabetically by birdLabel value
        birdTypes.sort((a, b) => {
            if (a.birdLabel.value < b.birdLabel.value) return -1;
            if (a.birdLabel.value > b.birdLabel.value) return 1;
            return 0;
        });

        const dropdown = document.getElementById("type");

        // Create the "Unknown" option and set it as the default choice
        const unknownOption = document.createElement("option");
        unknownOption.value = "unknown";
        unknownOption.textContent = "Unknown";
        unknownOption.selected = true;
        dropdown.appendChild(unknownOption);

        birdTypes.forEach((birdType) => {
            const option = document.createElement("option");
            option.value = option.textContent = birdType.birdLabel.value;
            dropdown.appendChild(option);
        });
    }

    // Call getLocation when the page loads
    // window.addEventListener('DOMContentLoaded', getLocation);

    window.addEventListener('DOMContentLoaded', async () => {
        const birdTypes = await fetchBirdTypes();
        populateBirdTypesDropdown(birdTypes);
        getLocation();

        document.getElementById("username").value = getNickname();
    });
</script>
<script type="module">
  // Add event listener for window loaded
  window.addEventListener('DOMContentLoaded', async () => {
    const sightingForm = document.getElementById("sightingForm");

    // Add submit listener for sightingForm
    sightingForm.addEventListener("submit", async function(e) {
      e.preventDefault();

      // Read upload image to base64
      const file = document.getElementById('picture').files[0];
      const reader = new FileReader();
      reader.readAsArrayBuffer(file);
      const picture = await new Promise(resolve => {
        reader.onload = function () {
          const arrayBuffer = this.result;
          const array = new Uint8Array(arrayBuffer);
          resolve({ data: array, contentType: file.type });
        };
      })

      // Construct a new sighting
      const newSighting = {
        description: document.getElementById('description').value,
        type: document.getElementById('type').value,
        location: {
          lat:  document.getElementById('lat').value,
          lng:  document.getElementById('lng').value,
        },
        lat: document.getElementById('userLat').value,
        lng: document.getElementById('userLng').value,
        picture: { data: picture, contentType: file.type },
        timestamp: new Date().toISOString(),
        username: document.getElementById('username').value,
        file: file
      }

      // Store new sighting to indexDB
      storeCachedData([newSighting]).then(() => {
        if (navigator.onLine) {
          // Construct a new sighting form
          const formData = new FormData();
          formData.append("type", newSighting.type);
          formData.append("description", newSighting.description);
          formData.append("userLat", newSighting.lat);
          formData.append("userLng", newSighting.lng);
          formData.append("lat", newSighting.location.lat);
          formData.append("lng", newSighting.location.lng);
          formData.append("username", newSighting.username);
          formData.append("picture", file);
          // Send sighting to server
          fetch('/sightings/api/add_sighting', {
            method: 'POST',
            body: formData
          }).then(res => {
            console.log("Sync a sighting to database.");
            window.location.href = '/';
          }).catch(err => {
            console.log("Sync fail.");
          });
        } else {
          window.location.href = '/';
        }
      });
    })
  });
</script>


